<Window x:Class="Airlines_Subbotin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airlines_Subbotin"
        mc:Ignorable="d"
            Title="Управление авиалиниями" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid Height="60" VerticalAlignment="Top" Background="#0c73fe">
            <Image Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,5,5" Source="Image/plane.png"/>
            <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="Управление авиалиниями" Foreground="White" FontSize="16" FontWeight="Bold" Margin="60,15,0,0"/>
            <Button VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Content="Выйти" Margin="0,10,10,0" Background="White" BorderBrush="White" Click="exit"/>
        </Grid>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Margin="0,60,0,0"/>
    </Grid>
</Window>
